---
import { Image } from 'astro:assets';
import Seccion from './Seccion.astro';

// Invitados definidos manualmente
const invitados = [
  {
    nombre: "William E. Salazar",
    afiliacion: "...",
    bio: "Investigador en tecnologías cuánticas y aplicaciones en optimización. Confirmado PRESENCIAL.",
    foto: "../../public/images/william.jpg",
  },
  {
    nombre: "Alberto Maldonado Romo",
    afiliacion: "IBM Quantum (IBM Research, Estados Unidos)",
    bio: "Especialista en computación cuántica aplicada a problemas financieros. Confirmado VIRTUAL.",
    foto: "../../public/images/alberto.jpeg",
  },
  {
    nombre: "Alejandro Gomez",
    afiliacion: "Kipu Quantum (Alemania)",
    bio: "Trabaja en teoría cuántica de la información y simulación de sistemas correlacionados. Confirmado PRESENCIAL/VIRTUAL.",
    foto: "../../public/images/alejandro.jpeg",
  },
  {
    nombre: "Prof. Alba Marcela Herrera",
    afiliacion: "Universidad del Valle",
    bio: "Profesora e investigadora en óptica cuántica. Confirmado PRESENCIAL.",
    foto: "../../public/images/marcela.jpg",
  },
  {
    nombre: "Prof. Omar Calderón",
    afiliacion: "Universidad del Valle",
    bio: "Profesor e investigador en teoría de campos cuánticos. Confirmado PRESENCIAL.",
    foto: "../../public/images/omar.png",
  },
  {
    nombre: "Prof. Karem Rodriguez",
    afiliacion: "Universidad del Valle",
    bio: "Profesora en ingeniería física y coordinadora de proyectos cuánticos. Confirmado PRESENCIAL.",
    foto: "../../public/images/karem.jpg",
  },
  {
    nombre: "Kevin Joven",
    afiliacion: "Ingeniería Electrónica ...",
    bio: "Estudiante e investigador en hardware cuántico. Confirmado VIRTUAL.",
    foto: "../../public/images/kevin.jpg",
  },
];

const hayInvitados = invitados.length > 0;
---

<Seccion class='guests' title='Invitados' id='invitados'>
    {
        hayInvitados ? (
            <div class='guests-grid'>
                {invitados.map((item) => {
                    const { nombre, afiliacion, bio, foto } = item;
                    return (
                        <article class='guest-card'>
                            <div class='guest-accent' aria-hidden='true' />

                            <div class='guest-top'>
                                <div class='guest-avatar'>
                                    <Image
                                        src={foto}
                                        alt={nombre}
                                        height={140}
                                    />
                                </div>

                                <header class='guest-head'>
                                    <h3 class='guest-name'>{nombre}</h3>
                                    {afiliacion && (
                                        <p class='guest-role'>{afiliacion}</p>
                                    )}
                                </header>
                            </div>

                            <p class='guest-bio'>{bio}</p>
                        </article>
                    );
                })}
            </div>
        ) : (
            <div class='guests-empty' role='status' aria-live='polite'>
                <div class='soon-card'>
                    <div class='soon-visual' aria-hidden='true'>
                        <span class='orbit' />
                        <span class='core' />
                    </div>
                    <h3 class='soon-title'>Próximamente</h3>
                    <p class='soon-text'>
                        Vuelve pronto para conocer la lista completa.
                    </p>
                </div>
            </div>
        )
    }
</Seccion>

<style>
    .guests-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 22px;
        align-items: stretch;
        width: 100%;
    }

    .guest-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 12px;
        background: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 16px;
        padding: 18px 16px 16px;
        box-shadow: 0 12px 28px -22px rgba(0, 0, 0, 0.35);
        transition:
            transform 0.15s ease,
            box-shadow 0.2s ease,
            border-color 0.2s ease;
        overflow: hidden;
    }
    .guest-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 44px -22px rgba(0, 0, 0, 0.45);
        border-color: var(--rosa, #ff66aa);
    }

    .guest-accent {
        position: absolute;
        inset: 0 0 auto 0;
        height: 6px;
        border-radius: 18px 18px 0 0;
        background: none;
        pointer-events: none;
    }

    .guest-top {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 16px;
        align-items: center;
    }

    .guest-avatar {
        width: 128px;
        height: 128px;
        border-radius: 9999px;
        overflow: hidden;
        background: #fff;
        flex-shrink: 0;
    }
    .guest-avatar :is(img, picture > img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.25s ease;
    }
    .guest-card:hover .guest-avatar :is(img, picture > img) {
        transform: scale(1.02);
    }

    .guest-head {
        min-width: 0;
    }
    .guest-name {
        margin: 0 0 4px;
        font-size: 1.35rem;
        line-height: 1.15;
    }
    .guest-role {
        margin: 0;
        font-size: 0.96rem;
        color: color-mix(in oklab, var(--gris-oscuro, #222) 55%, #999 45%);
    }
    .guest-bio {
        margin: 6px 2px 0;
        color: #2a2a2a;
        font-size: 1.1rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .guests-empty {
        display: grid;
        place-items: center;
        width: 100%;
        padding: 1rem 0 0;
    }
    .soon-card {
        box-sizing: border-box;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
        border: 1px dashed
            color-mix(in oklab, var(--gris-oscuro, #222) 60%, #bbb 40%);
        background: color-mix(in oklab, #fff 88%, var(--gris-oscuro, #222) 12%);
        border-radius: 18px;
        padding: 1.4rem 1.2rem;
        width: 100%;
        overflow: hidden;
    }

    @keyframes spin {
        to {
            transform: rotate(1turn);
        }
    }

    @media (max-width: 560px) {
        .guest-name {
            font-size: 1.15rem;
        }
        .guest-bio {
            font-size: 1rem;
            -webkit-line-clamp: 4;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .guest-card,
        .guest-avatar :is(img, picture > img) {
            transition: none;
        }
    }
</style>

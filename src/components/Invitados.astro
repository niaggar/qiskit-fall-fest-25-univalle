---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import defaultImage from '../../public/images/defaultImage.jpeg';
import Seccion from './Seccion.astro';

const invitados = (await getCollection('invitados')).sort((a, b) =>
    a.data.nombre.localeCompare(b.data.nombre),
);
const getFoto = (item) => item.data.foto ?? defaultImage;
const hayInvitados = invitados.length > 0;
---

<Seccion class='guests' title='Invitados' id='invitados'>
    {
        hayInvitados ? (
            <div class='guests-grid'>
                {invitados.map((item) => {
                    const { nombre, afiliacion, bio } = item.data;
                    const foto = getFoto(item);
                    return (
                        <article class='guest-card'>
                            <div class='guest-accent' aria-hidden='true' />

                            <div class='guest-top'>
                                <div class='guest-avatar'>
                                    <Image
                                        src={foto}
                                        alt={nombre}
                                        height={140}
                                    />
                                </div>

                                <header class='guest-head'>
                                    <h3 class='guest-name'>{nombre}</h3>
                                    {afiliacion && (
                                        <p class='guest-role'>{afiliacion}</p>
                                    )}
                                </header>
                            </div>

                            <p class='guest-bio'>{bio}</p>
                        </article>
                    );
                })}
            </div>
        ) : (
            /* Estado vacío — Próximamente */
            <div class='guests-empty' role='status' aria-live='polite'>
                <div class='soon-card'>
                    <div class='soon-visual' aria-hidden='true'>
                        <span class='orbit' />
                        <span class='core' />
                    </div>
                    <h3 class='soon-title'>Próximamente</h3>
                    <p class='soon-text'> Vuelve pronto para conocer la lista completa.
                    </p>
                </div>
            </div>
        )
    }
</Seccion>

<style>
    /* ===== Grid normal (cuando hay invitados) ===== */
    .guests-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 22px;
        align-items: stretch;
        width: 100%;
    }

    .guest-card {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 12px;
        background: #fff;
        border: 1px solid #e3e3e3;
        border-radius: 16px;
        padding: 18px 16px 16px;
        box-shadow: 0 12px 28px -22px rgba(0, 0, 0, 0.35);
        transition:
            transform 0.15s ease,
            box-shadow 0.2s ease,
            border-color 0.2s ease;
        overflow: hidden;
    }
    .guest-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 44px -22px rgba(0, 0, 0, 0.45);
        border-color: var(--rosa, #ff66aa);
    }

    .guest-accent {
        position: absolute;
        inset: 0 0 auto 0;
        height: 6px;
        border-radius: 18px 18px 0 0;
        background: linear-gradient(
            90deg,
            var(--rosa, #ff66aa),
            #7aa7ff 45%,
            #a78bfa 75%,
            var(--rosa, #ff66aa)
        );
        pointer-events: none;
    }

    .guest-top {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 16px;
        align-items: center;
    }

    .guest-avatar {
        width: 128px;
        height: 128px;
        border-radius: 9999px;
        overflow: hidden;
        background: #fff;
        flex-shrink: 0;
    }
    .guest-avatar :is(img, picture > img) {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        transition: transform 0.25s ease;
    }
    .guest-card:hover .guest-avatar :is(img, picture > img) {
        transform: scale(1.02);
    }

    .guest-head {
        min-width: 0;
    }
    .guest-name {
        margin: 0 0 4px;
        font-size: 1.35rem;
        line-height: 1.15;
    }
    .guest-role {
        margin: 0;
        font-size: 0.96rem;
        color: color-mix(in oklab, var(--gris-oscuro, #222) 55%, #999 45%);
    }
    .guest-bio {
        margin: 6px 2px 0;
        color: #2a2a2a;
        font-size: 1.1rem;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* ===== Estado vacío (“Próximamente”) ===== */
    .guests-empty {
        display: grid;
        place-items: center;
        width: 100%;
        padding: 1rem 0 0;
    }
    .soon-card {
        box-sizing: border-box;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 0.5rem;
        border: 1px dashed
            color-mix(in oklab, var(--gris-oscuro, #222) 60%, #bbb 40%);
        background: color-mix(in oklab, #fff 88%, var(--gris-oscuro, #222) 12%);
        border-radius: 18px;
        padding: 1.4rem 1.2rem;
        width: 100%;
        overflow: hidden;
    }
    .soon-accent {
        position: absolute;
        inset: 0 0 auto 0;
        height: 6px;
        border-radius: 18px 18px 0 0;
        background: linear-gradient(
            90deg,
            var(--rosa, #ff66aa),
            #7aa7ff 45%,
            #a78bfa 75%,
            var(--rosa, #ff66aa)
        );
        opacity: 0.95;
        pointer-events: none;
    }

    /* Visual con órbita sutil */
    .soon-visual {
        position: relative;
        width: 120px;
        height: 120px;
        border-radius: 9999px;
        margin-bottom: 0.2rem;
        background: radial-gradient(
                circle at 60% 40%,
                rgba(255, 102, 170, 0.16),
                transparent 40%
            ),
            #fff;
        border: 1px solid rgba(0, 0, 0, 0.06);
        box-shadow: inset 0 0 40px rgba(0, 0, 0, 0.03);
        isolation: isolate;
    }
    .soon-visual .core {
        position: absolute;
        inset: 36% 36% 36% 36%;
        border-radius: 9999px;
        background: var(--rosa, #ff66aa);
        opacity: 0.9;
        box-shadow: 0 0 22px -6px var(--rosa, #ff66aa);
    }
    .soon-visual .orbit {
        position: absolute;
        inset: 6px;
        border-radius: 9999px;
        border: 2px dashed
            color-mix(in oklab, var(--rosa, #ff66aa) 70%, #7aa7ff 30%);
        animation: spin 12s linear infinite;
    }

    .soon-title {
        margin: 0.2rem 0 0;
        font-size: 1.35rem;
    }
    .soon-text {
        margin: 0;
        color: #333;
    }

    @keyframes spin {
        to {
            transform: rotate(1turn);
        }
    }

    /* ===== Responsive ===== */
    @media (max-width: 560px) {
        .guest-name {
            font-size: 1.15rem;
        }
        .guest-bio {
            font-size: 1rem;
            -webkit-line-clamp: 4;
        }
        .soon-card {
            padding: 1.1rem 0.9rem;
        }
        .soon-title {
            font-size: 1.15rem;
        }
    }

    /* Accesibilidad: reduce motion */
    @media (prefers-reduced-motion: reduce) {
        .guest-card,
        .guest-avatar :is(img, picture > img) {
            transition: none;
        }
        .soon-visual .orbit {
            animation: none;
        }
    }
</style>

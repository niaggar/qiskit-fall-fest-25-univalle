---
import quiskitSVG from '../../public/images/Badge_Dark.svg';
import { Image } from 'astro:assets';
---

<section>
    <div class='start'>
        <div class='logoWrap'>
            <span class='ring-anim' aria-hidden='true'></span>
            <Image src={quiskitSVG} alt='Quiskit Logo' width='300' />
        </div>

        <div class='info'>
            <div class='dates'>
                <h2><span class='dates-strong'>3 - 7</span></h2>
                <h2>Septiembre</h2>
            </div>
            <button class='btn-shine'>
                Regístrate
                <span class='shine' aria-hidden='true'></span>
            </button>
        </div>
    </div>
</section>


<style>
    a {
        display: inline-block;
        text-decoration: none;
    }
    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }

    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2em;
        text-align: center;
        padding-top: 100px;
        padding-bottom: 100px;
        background: var(--gris-oscuro);
        background-image: url('../../public/images/wallpaper.png');
        background-size: cover;       /* llena el div, recorta si hace falta */
        background-position: center;  /* centrado del recorte */
        background-repeat: no-repeat; /* sin mosaico */
    }

    .start {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 5em;
        border: 5px solid var(--gris-oscuro);
        background: var(--gris);
        border-radius: 300px;
        padding: 3em;
        position: relative;
        overflow: hidden;
    }

    /* —— LOGO + ARO —— */
    .logoWrap {
        position: relative;
        display: grid;
        place-items: center;
    }
    .ring-anim {
        position: absolute;
        inset: -14%;
        border-radius: 9999px;
        border: 3px dashed var(--rosa, #ff66aa); /* usa rosa si existe; si no, fallback */
        opacity: 0.85;
        animation: spin 12s linear infinite;
        /* sombra sencilla para que destaque en var(--gris) */
        box-shadow:
            0 0 18px -6px rgba(0, 0, 0, 0.6),
            inset 0 0 0 3px rgba(255, 255, 255, 0.05);
    }
    @keyframes spin {
        to {
            transform: rotate(1turn);
        }
    }

    .info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1em;
        margin-right: 40px;
    }
    .dates {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.2em;
    }

    h2 {
        font-size: 2em;
        margin: 0;
    }
    h2 span {
        font-size: 1.8em;
        margin-bottom: -0.3em;
        display: block;
        color: var(--rosa, #ff66aa);
    }

    /* —— animación suave al “3–7” —— */
    .dates-strong {
        animation: bob 3.6s ease-in-out infinite;
    }
    @keyframes bob {
        0%,
        100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-4px);
        }
    }

    /* —— botón con “shine” —— */
    button {
        background: var(--rosa, #ff66aa);
        color: white;
        border: none;
        padding: 0.75em 1.5em;
        font-size: 1em;
        border-radius: 8px;
        cursor: pointer;
        transition:
            transform 0.15s ease,
            box-shadow 0.2s ease,
            background 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    button:hover {
        background: var(--rosa-oscuro, #e05899);
        transform: translateY(-1px);
        box-shadow: 0 10px 24px -14px rgba(255, 102, 170, 0.8);
    }
    .btn-shine .shine {
        position: absolute;
        inset: 0;
        pointer-events: none;
        background: linear-gradient(
            100deg,
            transparent 0%,
            rgba(255, 255, 255, 0.18) 12%,
            transparent 24%
        );
        transform: translateX(-120%);
        transition: transform 0.6s ease;
    }
    .btn-shine:hover .shine {
        transform: translateX(120%);
    }

    hr {
        width: 100%;
        border: none;
        border-top: 1px solid var(--gris-oscuro);
        margin: 2em 0;
    }
    .others {
        display: flex;
        gap: 2em;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
    }


    @media (max-width: 720px) {
        .start {
            flex-direction: column;
            padding: 2em 1em;
            gap: 2em;
            margin-top: 50px;
        }
        .info {
            align-items: center;
            margin-right: 0;
        }
        .dates {
            align-items: center;
        }
    }
</style>

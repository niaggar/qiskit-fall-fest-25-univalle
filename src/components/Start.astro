---
import quiskitSVG from '../../public/images/Badge_Dark.svg';
import { Image } from 'astro:assets';
---

<section>
    <div class='start'>
        <div class='logoWrap'>
            <span class='ring-anim' aria-hidden='true'></span>
            <Image src={quiskitSVG} alt='Quiskit Logo' width='300' />
        </div>

        <div class='info'>
            <div class='dates'>
                <h2><span class='dates-strong'>3-7</span></h2>
                <h2>Septiembre</h2>
            </div>
            <a
                class='btn-shine'
                href='https://airtable.com/app3wHxtROSqSuwWa/pagzX9dCXUHN6vdId/form'
                target='_blank'
                rel='noopener'
            >
                Regístrate
                <span class='shine' aria-hidden='true'></span>
            </a>
        </div>
    </div>

    <div class='venue'>
        <span class='venue-pill'>
            <!-- Pin SVG -->
            <svg
                class='pin'
                viewBox='0 0 24 24'
                width='18'
                height='18'
                aria-hidden='true'
            >
                <path
                    fill='currentColor'
                    d='M12 2a7 7 0 0 0-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 0 0-7-7Zm0 9.5a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5Z'
                ></path>
            </svg>
            <span class='venue-text'>Universidad del Valle</span>
        </span>

        <span class='venue-line' aria-hidden='true'></span>
    </div>
</section>

<style>
    a {
        display: inline-block;
        text-decoration: none;
    }
    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }

    section {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 1em;
        text-align: center;
        padding-top: 150px;
        padding-bottom: 100px;
        background: var(--gris-oscuro);
        background-image: url('../../public/images/wallpaper.png');
        background-size: cover; /* llena el div, recorta si hace falta */
        background-position: center; /* centrado del recorte */
        background-repeat: no-repeat; /* sin mosaico */
    }

    .start {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 5em;
        border: 5px solid var(--gris-oscuro);
        background: var(--gris);
        border-radius: 300px;
        padding: 3em;
        position: relative;
        overflow: hidden;
    }

    /* —— LOGO + ARO —— */
    .logoWrap {
        position: relative;
        display: grid;
        place-items: center;
    }
    .ring-anim {
        position: absolute;
        inset: -14%;
        border-radius: 9999px;
        border: 3px dashed var(--rosa, #ff66aa); /* usa rosa si existe; si no, fallback */
        opacity: 0.85;
        animation: spin 12s linear infinite;
        /* sombra sencilla para que destaque en var(--gris) */
        box-shadow:
            0 0 18px -6px rgba(0, 0, 0, 0.6),
            inset 0 0 0 3px rgba(255, 255, 255, 0.05);
    }
    @keyframes spin {
        to {
            transform: rotate(1turn);
        }
    }

    .info {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 1em;
        margin-right: 40px;
    }
    .dates {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 0.2em;
    }

    h2 {
        font-size: 2em;
        margin: 0;
    }
    h2 span {
        font-size: 1.8em;
        margin-bottom: -0.2em;
        display: block;
        color: var(--rosa, #ff66aa);
    }

    /* —— animación suave al “3–7” —— */
    .dates-strong {
        font-weight: 700;
    }

    /* —— botón con “shine” —— */
    .btn-shine {
        display: inline-block;
        text-align: center;
        font-weight: 600;
        text-decoration: none;
        background: var(--rosa, #ff66aa);
        color: #ffffff;
        border: none;
        padding: 0.75em 1.5em;
        font-size: 1em;
        border-radius: 8px;
        cursor: pointer;
        transition:
            transform 0.15s ease,
            box-shadow 0.2s ease,
            background 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    .btn-shine:hover {
        background: var(--rosa-oscuro, #e05899);
        transform: translateY(-1px);
        box-shadow: 0 10px 24px -14px rgba(255, 102, 170, 0.8);
    }
    .btn-shine .shine {
        position: absolute;
        inset: 0;
        pointer-events: none;
        background: linear-gradient(
            100deg,
            transparent 0%,
            rgba(255, 255, 255, 0.18) 12%,
            transparent 24%
        );
        transform: translateX(-120%);
        transition: transform 0.6s ease;
    }
    .btn-shine:hover .shine {
        transform: translateX(120%);
    }

    hr {
        width: 100%;
        border: none;
        border-top: 1px solid var(--gris-oscuro);
        margin: 2em 0;
    }
    .others {
        display: flex;
        gap: 2em;
        align-items: center;
        justify-content: center;
        flex-wrap: wrap;
    }

    /* ===== Venue banner (lugar) ===== */
.venue{
  width: 100%;
  max-width: 920px;
  display: flex;
  align-items: center;
  justify-content: center;
}



.venue-pill{
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: .55rem .9rem;
  border-radius: 9999px;
  color: var(--gris-oscuro, #222);
  background:
    radial-gradient(120% 120% at 20% 0%, rgba(255,102,170,.18), transparent 60%),
    #fff;
  border: 1px solid color-mix(in oklab, var(--gris-oscuro, #222) 70%, #fff 30%);
  box-shadow: 0 10px 24px -18px rgba(0,0,0,.35);
}

.venue-pill .pin{
  color: var(--rosa, #ff66aa);
  filter: drop-shadow(0 2px 6px rgba(255,102,170,.35));
}
.venue-text{
  font-weight: 800;
  letter-spacing: .3px;
}

/* Compacto en móvil */
@media (max-width: 720px){
  .venue{ grid-template-columns: 1fr; gap: 10px; }
  .venue-line{ display:none; }
  .venue-pill{
    justify-self: center;
    padding: .5rem .8rem;
  }
  .venue-text{ font-size: 1rem; }
}

/* Respeta reduce motion */
@media (prefers-reduced-motion: reduce){
  .venue-line::after{ animation: none; }
}


    @media (max-width: 720px) {
        .start {
            flex-direction: column;
            padding: 2em 1em;
            gap: 2em;
            margin-top: 50px;
        }
        .info {
            align-items: center;
            margin-right: 0;
        }
        .dates {
            align-items: center;
        }
    }
</style>
